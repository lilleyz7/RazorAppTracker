@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AppTrackV2.Pages.Applications.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application[0].DateAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Application) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AppTrackV2.Pages.Applications.CreateModel
        @{
        ViewData["Title"] = "Create";
        }
        
        
    <h4>Create Application</h4>
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationToAdd.Title" class="control-label">Title</label>
                <input asp-for="ApplicationToAdd.Title" class="form-control" />
                <span asp-validation-for="ApplicationToAdd.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationToAdd.Company" class="control-label">Company</label>
                <input asp-for="ApplicationToAdd.Company" class="form-control" />
                <span asp-validation-for="ApplicationToAdd.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationToAdd.Notes" class="control-label">Notes</label>
                <textarea asp-for="ApplicationToAdd.Notes" class="form-control"></textarea>
                <span asp-validation-for="ApplicationToAdd.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationToAdd.Status" class="control-label">Status</label>
                <input asp-for="ApplicationToAdd.Status" class="form-control" />
                <span asp-validation-for="ApplicationToAdd.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationToAdd.Link" class="control-label">Link</label>
                <input asp-for="ApplicationToAdd.Link" class="form-control" />
                <span asp-validation-for="ApplicationToAdd.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
